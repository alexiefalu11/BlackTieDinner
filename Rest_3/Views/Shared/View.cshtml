<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Black Tie Dinner</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
                <img alt="Bootstrap Image Preview" src="https://static.designmynight.com/uploads/2015/12/Black-Tie-Dinner-140x140-optimised.png" />
            </div>
            <div class="col-md-10">

                <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
                    <div class="navbar-header">

                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                            <span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                        </button> <a class="navbar-brand" @Html.ActionLink("Black Tie Dinner", "Index", "Home")</a>
                    </div>

                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li class="active">
                                <a @Html.ActionLink("Restaurants", "Index", "Restaurants")</a>
                            </li>
                            <li>
                                <a @Html.ActionLink("Reviews", "Index", "Restaurant_Reviews")</a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">All<strong class="caret"></strong></a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a @Html.ActionLink("Name", "SearchName", "Restaurants")</a>
                                    </li>
                                    <li>
                                        <a @Html.ActionLink("City", "SearchCity", "Restaurants")</a>
                                    </li>
                                    <li>
                                        <a @Html.ActionLink("ZipCode", "SearchZip", "Restaurants")</a>
                                    </li>
                                    <li>
                                        <a @Html.ActionLink("Reviews Lowest to Highest", "SearchReview", "Restaurants")</a>
                                    </li>
                                    <li>
                                        <a @Html.ActionLink("Reviews Highest to Lowest", "SearchReviewHigh", "Restaurants")</a>
                                    </li>

                                </ul>
                            </li>
                        </ul>
                        <form action="~/Restaurants/Search" method="get" class="navbar-form navbar-left" role="search">
                            <div class="form-group">
                                <input type="search" id="search" name="search" placeholder="search your restaurant" class="form-control" />
                            </div>
                            <button type="submit" class="btn btn-default">
                                Submit
                            </button>
                        </form>
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                @Html.Partial("_LoginPartial")
                            </li>

                        </ul>
                    </div>

                </nav>
            </div>
        </div>
    </div>



    @RenderBody()

    <footer>
        <p>&copy; @DateTime.Now.Year - Black Tie Dinner</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
